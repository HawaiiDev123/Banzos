<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/iv_main_title_student"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.2"
            android:background="@color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_centerVertical="true"
                android:src="@drawable/circle_icon" />

            <TextView
                android:id="@+id/tv_firstLetter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                style="@style/black14spBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chrish"
                android:paddingStart="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_review_star"/>

            <TextView
                style="@style/grey12spNormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="10dp"
                android:text="25-01-2019 Friday" />

            <TextView
                style="@style/black12spNormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/dummy_two_lines" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>