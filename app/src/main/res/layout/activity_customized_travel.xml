                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_islands"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Leaving From(Departing Airport)"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_leavingfrom"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Departing Date"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_departingDate"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:inputType="date"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
