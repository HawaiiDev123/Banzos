                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_stdBusFirstClass"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What Island Are you Arriving Into First?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_islandFirstArrival"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hotel,Condo Or Vacation Home?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_hotelCondoVactionHome"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What is the target Price Range?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_targetPriceRange"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location Type?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_locationType"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Amenities?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_amenities"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rental Car Or Transportation Needed?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/et_rentalCarOrTransportation"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/rectangle_bg_white"
                                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                                android:inputType="text"
                                android:padding="10dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Type?"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
