<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.beach.BeachListActivity">

    <include layout="@layout/toolbar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:translationZ="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tl_imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorHeight="0dp"
                        app:tabSelectedTextColor="@android:color/transparent"
                        app:tabTextColor="@android:color/transparent" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sample6" />

            </FrameLayout>

            <TextView
                style="@style/primaryDarkColor18spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Bryan KC Pelle" />

            <TextView
                style="@style/black14spNormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="655 Chaparral St. Pasadena, CA. 91730" />

            <TextView
                style="@style/black12spNormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Email: kc@pelle@gmail.com" />

            <TextView
                style="@style/black12spNormalTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Phone: +1 714 328 02000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="0.5"
                    android:background="@color/lightest_blue"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="User ID: hustlerhawaii"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/lightest_blue"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Account ID: PT-122345"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_myAccount"
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="My account"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Trip Board and Planner"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Reservations(vas)"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="itinerary"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Travel assist"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="General information"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Give a review"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="feedback"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Contact Us"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvMyHawaiiLogout"
                style="@style/white14spBoldTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.2dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="Logout"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>